{% extends 'base.html.twig' %}

{% block title %}Restaurante{% endblock %}

{% block body %}
    <h1>Restaurante</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cod_res</th>
                <td>{{ restaurante.codRes }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ restaurante.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ restaurante.roles ? restaurante.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ restaurante.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ restaurante.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_restaurante_index') }}">back to list</a>

    <a href="{{ path('app_restaurante_edit', {'cod_res': restaurante.cod_res}) }}">edit</a>

