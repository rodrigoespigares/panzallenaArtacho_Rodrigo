{% extends 'admin.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <div>
        <h1>Pedidos</h1>

        <table class="table">
        <thead>
            <tr>
                <th>CodPed</th>
                <th>Fecha</th>
                <th>Enviado</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.codPed }}</td>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.enviado ? 'Yes' : 'No' }}</td>
                <td class="d-flex gap-3">
                    <button class="btn btn-success boto">
                        <a href="{{ path('app_pedidos_show', {'codPed': pedido.codPed}) }}">Ver</a>
                    </button>
                    <button class="btn btn-success boto">
                        <a href="{{ path('app_pedidos_edit', {'codPed': pedido.codPed}) }}">Editar</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% if editar %}
    <div class="formulario__admin__pedidos">
        
            {{ include('pedidos/_form.html.twig',{'button_label': 'Confirmar'}) }}
            <button class="btn btn-success boto">
                <a href="{{ path('app_pedidos_index_admin') }}">Volver</a>
            </button>
        
    </div>
    {% endif %}
{% endblock %}
