{% extends 'admin.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <div>
        <h1>productos</h1>

        <table class="table">
        <thead>
            <tr>
                <th>CodProd</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Peso</th>
                <th>Stock</th>
                <th>Foto</th>
                <th>Precio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.codProd }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.peso }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.foto }}</td>
                <td>{{ producto.precio }}</td>
                <td class="d-flex gap-3">
                    <button class="btn btn-success boto">
                        <a href="{{ path('app_producto_show', {'codProd': producto.codProd}) }}">Ver</a>
                    </button>
                    {% if app.user.roles[0]=="ROLE_ADMIN" %}
                    <button class="btn btn-success boto">
                        <a href="{{ path('app_producto_edit', {'codProd': producto.codProd}) }}">Editar</a>
                    </button>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <div class="formulario__admin__productos">
        {% if editar %}
            {{ include('producto/_form.html.twig', {'button_label': 'Confirmar'}) }}
            <button class="btn btn-success boto">
                <a href="{{ path('app_producto_index_admin') }}">Volver</a>
            </button>
            {{ include('producto/_delete_form.html.twig') }}
        {% else %}
            {{ include('producto/_form.html.twig') }}
            <button class="btn btn-success boto">
                <a href="{{ path('app_producto_index_admin') }}">Volver</a>
            </button>
        {% endif %}
    </div>
{% endblock %}