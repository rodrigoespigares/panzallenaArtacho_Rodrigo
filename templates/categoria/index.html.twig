{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
    <h1>Categorias</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CodCat</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                {% if app.user.roles[0]=="ROLE_ADMIN" %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td>{{ categorium.codCat }}</td>
                <td>{{ categorium.nombre }}</td>
                <td>{{ categorium.descripcion }}</td>
                {% if app.user.roles[0]=="ROLE_ADMIN" %}
                <td>
                    <a href="{{ path('app_categoria_show', {'codCat': categorium.codCat}) }}">show</a>
                    <a href="{{ path('app_categoria_edit', {'codCat': categorium.codCat}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user.roles[0]=="ROLE_ADMIN" %}
    <a href="{{ path('app_categoria_new') }}">Create new</a>
    {% endif %}
{% endblock %}
