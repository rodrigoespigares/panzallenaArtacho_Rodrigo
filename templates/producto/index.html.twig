{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <h1>Producto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CodProd</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Peso</th>
                <th>Stock</th>
                <th>Foto</th>
                <th>Precio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.codProd }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.peso }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.foto }}</td>
                <td>{{ producto.precio }}</td>
                <td>
                    <a href="{{ path('app_cesta_new', {'codProd': producto.codProd}) }}">AÃ±adir a la cesta</a>
                    <a href="{{ path('app_producto_show', {'codProd': producto.codProd}) }}">Ver</a>
                    {% if app.user.roles[0]=="ROLE_ADMIN" %}
                    <a href="{{ path('app_producto_edit', {'codProd': producto.codProd}) }}">Editar</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user.roles[0]=="ROLE_ADMIN" %}
    <a href="{{ path('app_producto_new') }}">Crear uno nuevo</a>
    {% endif %}
{% endblock %}
