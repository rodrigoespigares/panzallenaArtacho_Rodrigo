{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
    <h1>Producto</h1>

    <article class="d-flex gap-5">
        <div class="contenedor__imagen"><img class="w-100 h-100" src="{{ asset('uploads/' ~ producto.foto) }}"></div>
        <div class="">
            <p>CodProd: {{ producto.codProd }}</p>
            <p>Nombre: {{ producto.nombre }}</p>
            <p>Descripcion: {{ producto.descripcion }}</p>
            <p>Peso: {{ producto.peso }}</p>
            <p>Stock: {{ producto.stock }}</p>
            <p>Precio: {{ producto.precio }}</p>
        </div>
    </article>

    <button class="btn btn-success boto">
        <a href="{{ path('app_base') }}">Volver</a>
    </button>
    {% if app.user.roles[0]=="admin" %}
    <a href="{{ path('app_producto_edit', {'codProd': producto.codProd}) }}">edit</a>
    {{ include('producto/_delete_form.html.twig') }}
    {% endif %}

    
{% endblock %}
