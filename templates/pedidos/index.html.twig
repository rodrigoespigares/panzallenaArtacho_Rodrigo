{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <h1>Pedidos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CodPed</th>
                <th>Fecha</th>
                <th>Enviado</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.codPed }}</td>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.enviado ? 'Si' : 'No' }}</td>
                <td>
                        <a class="btn btn-success boto" href="{{ path('app_pedidos_show', {'codPed': pedido.codPed}) }}">Ver</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
