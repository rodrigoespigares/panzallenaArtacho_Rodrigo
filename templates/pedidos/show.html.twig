{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <h1>Pedidos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>CodPed</th>
                <td>{{ pedido.codPed }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Enviado</th>
                <td>{{ pedido.enviado ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="div__botones">
        <button class="btn btn-success boto">
            <a href="{{ path('app_base') }}">back to list</a>
        </button>
        {% if app.user.roles[0]=="ROLE_ADMIN" %}
            <button class="btn btn-success boto">
                <a href="{{ path('app_pedidos_edit', {'codPed': pedido.codPed}) }}">edit</a>
            </button>
            <div class="boton__delete">
                {{ include('pedidos/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>




    
{% endblock %}
